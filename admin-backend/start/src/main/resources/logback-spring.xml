<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- 文件输出格式 -->
    <property name="PATTERN"
              value="%boldMagenta([%d{yyyy-MM-dd'T'HH:mm:ss.SSS}]) %highlight(%-5level) --- %applicationName[%15.15t]%cyan(%correlationId) %green(%-40.40logger{39}) %blue(%c [%L]): %m%n%wEx"/>
    <property name="LOG_NAME" value="admin"/>
    <property name="PACKAGE_NAME" value="com.xfrog"/>
    <property name="LOG_PATH" value="${LOG_PATH:-./logs}"/>
    <property name="TEST_LOG_PATH" value="${LOG_PATH}"/>
    <property name="PROD_LOG_PATH" value="${LOG_PATH}"/>

    <springProfile name="dev">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>${PATTERN}</pattern>
            </encoder>
        </appender>

        <logger name="org.springframework.jdbc.core.JdbcTemplate" level="debug"/>
        <logger name="org.apache.ibatis.reflection" level="INFO"/>

        <logger name="${PACKAGE_NAME}" level="debug"/>
        <root level="info">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <springProfile name="unit-test">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>${PATTERN}</pattern>
            </encoder>
        </appender>

        <logger name="org.springframework.jdbc.core.JdbcTemplate" level="debug"/>
        <logger name="org.apache.ibatis.reflection" level="INFO"/>

        <logger name="${PACKAGE_NAME}" level="debug"/>
        <root level="info">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <springProfile name="test">
        <!-- 每天产生一个文件 -->
        <appender name="TEST_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${TEST_LOG_PATH}${file.separator}${LOG_NAME}.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <!-- rollover daily -->
                <fileNamePattern>${TEST_LOG_PATH}${file.separator}${LOG_NAME}-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <!-- each file should be at most 100MB, keep 60 days worth of history, but at most 20GB -->
                <maxHistory>7</maxHistory>
                <maxFileSize>100MB</maxFileSize>
                <totalSizeCap>20GB</totalSizeCap>
            </rollingPolicy>
            <encoder>
                <pattern>
                    [%d{yyyy-MM-dd'T'HH:mm:ss.SSS}] %-5level --- %applicationName[%15.15t]%correlationId %-40.40logger{39} %method %line: %m%n%wEx
                </pattern>
            </encoder>
        </appender>
        <logger name="org.springframework.jdbc.core.JdbcTemplate" level="debug"/>
        <logger name="org.apache.ibatis.reflection" level="INFO"/>
        <logger name="${PACKAGE_NAME}" level="debug"/>
        <root level="debug">
            <appender-ref ref="TEST_LOG"/>
        </root>
    </springProfile>

    <!-- 生产环境 -->
    <springProfile name="prod">
        <appender name="PROD_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${PROD_LOG_PATH}${file.separator}${LOG_NAME}.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <!-- rollover daily -->
                <fileNamePattern>${PROD_LOG_PATH}${file.separator}${LOG_NAME}-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <!-- each file should be at most 100MB, keep 60 days worth of history, but at most 20GB -->
                <maxHistory>7</maxHistory>
                <maxFileSize>100MB</maxFileSize>
                <totalSizeCap>20GB</totalSizeCap>
            </rollingPolicy>
            <encoder>
                <pattern>
                    [%d{yyyy-MM-dd'T'HH:mm:ss.SSS}] %-5level --- %applicationName[%15.15t]%correlationId %-40.40logger{39} %method %line: %m%n%wEx
                </pattern>
            </encoder>
        </appender>
        <root level="info">
            <appender-ref ref="PROD_LOG"/>
        </root>
    </springProfile>
</configuration>